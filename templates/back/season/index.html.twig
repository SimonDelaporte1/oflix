{% extends 'base.html.twig' %}

{% block title %}Liste des saisons{% endblock %}

{% block admin_nav %}{{ include('back/_nav.html.twig', {'nav_active': 'season_index'}) }}{% endblock %}

{% block body %}
    <h1>Liste des saisons</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numéro de la saison</th>
                <th>Nombre d'épisodes</th>
                <th>Film</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.episodesNumber }}</td>
                <td>{{ season.movie.title }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('back_season_show', {'id': season.id}) }}">Voir</a>
                    <a class="btn btn-primary" href="{{ path('back_season_edit', {'id': season.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de saison trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('back_season_new') }}">Créer</a>
{% endblock %}
