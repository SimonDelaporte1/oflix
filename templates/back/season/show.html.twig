{% extends 'base.html.twig' %}

{% block title %}Saison{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Numéro de la saison</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Nombre d'épisodes</th>
                <td>{{ season.episodesNumber }}</td>
            </tr>
            <tr>
                <th>Film</th>
                <td>{{ season.movie.title }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('back_season_index') }}">Revenir à la liste</a>

    <a class="btn btn-primary" href="{{ path('back_season_edit', {'id': season.id}) }}">Modifier</a>

    {{ include('back/season/_delete_form.html.twig') }}
{% endblock %}
