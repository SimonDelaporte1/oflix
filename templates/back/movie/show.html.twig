{% extends 'base.html.twig' %}

{% block title %}Fiche film{% endblock %}

{% block admin_nav %}{{ include('back/_nav.html.twig', {'nav_active': 'movie_index'}) }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Fiche film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie.type }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('l d F Y') : '' }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ movie.summary }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img src="{{ movie.poster }}" width="50" /></td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ movie.duration }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('back_movie_index') }}">Revenir Ã  la page d'accueil</a>

    <a class="btn btn-primary" href="{{ path('back_movie_edit', {'id': movie.id}) }}">Modifier</a>

    {{ include('back/movie/_delete_form.html.twig') }}
</div>
{% endblock %}
